{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=CLOUDS\\SQLEXPRESS;Database=DBUniversity;Trusted_Connection=True;"
  },
  "JsonWebTokenKeys": {
    "ValidateIssuerSigningKey": true,
    "IssuerSigningKey": "73A63153-52C1-4919-9133-EFAF99A9B457",
    "ValidateIssuer": true,
    "ValidIssuer": "https://localhost:7130",
    "ValidateAudience": true,
    "ValidAudience": "https://localhost:7130",
    "RequiredExpirationTime": true,
    "ValidateLifeTime": true
  },
  "Serilog": {
    "MinimunLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.LifeTime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "ConnectionString": "DBUniversity",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "schemaName": "EventLogging",
            "autoCreateSqlTable": true,
            "batchPostingLimit": 1000,
            "period": "0.00:00:30"
          },
          "restrictedToMinimumLevel": "Verbose"
        }
      }
    ]
  }
}
